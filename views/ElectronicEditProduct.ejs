    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css" />
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="../../plugins/sweetalert2/sweetalert2.min.css" />
    <!-- Toastr -->
    <link rel="stylesheet" href="../../plugins/toastr/toastr.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</head>

<body>
    <%- include("./common/AdminNavbar") %>
        <%- include("./common/AdminSidebar") %>
            <div class="content-wrapper card">
                <div class="card-header">

                    <h3 class="card-title">Product Edit</h3>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <form method="post">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="inputName">Product Name</label>
                                            <input type="text" name="productName" id="inputName" class="form-control"
                                                value="<%-productDetails.productName%>">
                                        </div>
                                    </div>
                                    <div class="col-4">
                                            <div class="form-group">
                                                <label for="inputStatus">Change Category</label>
                                                <select id="inputStatus" name="category" class="form-control custom-select">
                                                    <%categoryList.map((d)=>{%>
                                                        <option value="<%-d._id%>"
                                                            <%if(d._id==productDetails.category.toString()){%> selected
                                                            <%}%>><%-d.categoryName%>
                                                        </option>
                                                        <%})%>
    
                                                </select>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label for="inputStatus">Change Warranty</label>
                                            <select class="form-control" name="warranty">
                                                <option value="2 Months" <%if(productDetails.warranty=='2 Months'){%>selected<%}%> >2 Months</option>
                                                <option value="4 Months" <%if(productDetails.warranty=='4 Months'){%>selected<%}%> >4 Months</option>
                                                <option value="6 Months" <%if(productDetails.warranty=='6 Months'){%>selected<%}%> >6 Months</option>
                                                <option value="1 Year" <%if(productDetails.warranty=='1 Year'){%>selected<%}%> >1 Year</option>
                                                <option value="2 Year" <%if(productDetails.warranty=='2 Year'){%>selected<%}%> >2 Year</option>
                                                <option value="3 Year" <%if(productDetails.warranty=='3 Year'){%>selected<%}%> >3 Year</option>
                                                <option value="4 Year" <%if(productDetails.warranty=='4 Year'){%>selected<%}%> >4 Year</option>
                                                <option value="5 Year" <%if(productDetails.warranty=='5 Year'){%>selected<%}%> >5 Year</option>
                                            </select>
                                        </div>
                                </div>
                                </div>
                               
                                <%if(typeof(product)!='undefined'){%>
                                    <%if(product=='nsp'){%>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label for="inputName">Change Price</label>
                                                    <input type="text" name="price" id="inputName" class="form-control"
                                                        value="<%-productDetails.price%>">
                                                </div>
        
                                            </div>
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label for="inputName">Change quantity</label>
                                                    <input type="number" name="quantity" id="inputName" class="form-control"
                                                        value="<%-productDetails.quantity%>">
                                                </div>
                                            </div>
        
                                        </div>


                                        <%}else{%>
                                                    <%productDetails.storage.map((s)=>{%>
                                                        <div class="row">
                                                            <div class="col-4">
                                                                <div class="form-group">
                                                                    <label for="inputStatus">Storage</label>
                                                                    <select id="inputStatus" name="storage_<%-s.storage.ram%>_<%-s.storage.rom%>" class="form-control custom-select">
                                                                            <option value="<%-s.storage._id%>"><%-s.storage.ram%>|<%-s.storage.rom%></option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-4">
                                                                <div class="form-group">
                                                                    <label for="inputName">Change Price</label>
                                                                    <input type="text" name="price_<%-s.storage.ram%>_<%-s.storage.rom%>" id="inputName" class="form-control"
                                                                        value="<%-s.price%>">
                                                                </div>
                                                            </div>
                                                            <div class="col-4">
                                                                <div class="form-group">
                                                                    <label for="inputName">Change quantity</label>
                                                                    <input type="number" name="quantity_<%-s.storage.ram%>_<%-s.storage.rom%>" id="inputName" class="form-control"
                                                                        value="<%-s.quantity%>">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- <div class="col-4">
                                                   
            
                                                </div>
                                                <div class="col-4">
                                                    
                                                </div> -->
                                                        
                                                        <%})%>
                                                
                                            <%}%>
                                    <%}%>
                                
                                <div class="form-group">
                                    <label for="inputDescription">Product Description</label>
                                    <textarea id="inputDescription" name="desc" class="form-control"
                                        rows="3"><%-productDetails.desc%></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Product Sort Description</label>
                                    <textarea id="inputDescription" name="sortDesc" class="form-control"
                                        rows="3"><%-productDetails.sortDesc%></textarea>
                                </div>
                                <div class="form-group" style="text-align: right;">
                                    <button type="submit" class="btn-success">
                                        Update Product
                                    </button>
                                </div>
                            </form>

                        </div>

                        <div class="col-4" style="padding: 1%;display: grid;grid-template-rows: 150px 1fr;">
                            <div style="padding: 1%;">
                                <form method="post" enctype="multipart/form-data"
                                    action="/product/edit/image/upload/<%-productDetails._id%>">
                                    <div class="form-group">
                                        <label for="formFileMultiple" style="font-size: 20px;" class="form-label">Select
                                            Image for Product</label>
                                        <input class="form-control" type="file" name="images" required
                                            id="formFileMultiple" multiple
                                            style="padding:1%;font-size:15px;font-weight: 600;" min="3"
                                            accept="image/png, image/gif, image/jpeg">
                                    </div>
                                    <div class="form-group" style="text-align: right;">
                                        <button type="submit" class="btn-success">
                                            Upload Image
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <div >
                                <table class="table table-hover table-bordered" >
                                    <%productDetails.images.map((img)=>{%>
                                        <tr>
                                            <td>
                                                <img class=" img-fluid small" src='/productImages/<%-img%>'
                                                    alt="User profile picture" height="100%" width="100%" />

                                            </td>
                                            <td>
                                                <a href="/product/edit/image/delete/<%-productDetails._id%>/<%-img%>"
                                                    class="btn btn-info"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        <%})%>
                                </table>
                            </div>
                            

                        </div>

                    </div>

                </div>

            </div>








            <script src="../../plugins/jquery/jquery.min.js"></script>
            <!-- Bootstrap 4 -->
            <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
            <!-- DataTables  & Plugins -->
            <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
            <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
            <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
            <script src="../../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
            <script src="../../plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
            <script src="../../plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
            <script src="../../plugins/jszip/jszip.min.js"></script>
            <script src="../../plugins/pdfmake/pdfmake.min.js"></script>
            <script src="../../plugins/pdfmake/vfs_fonts.js"></script>
            <script src="../../plugins/datatables-buttons/js/buttons.html5.min.js"></script>
            <script src="../../plugins/datatables-buttons/js/buttons.print.min.js"></script>
            <script src="../../plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
            <!-- AdminLTE App -->
            <script src="../../dist/js/adminlte.min.js"></script>

<div class="products">
    <div class="container  ">
        <div class="container-fluid" style=" background-color: #fff; padding: 11px;">
			<div class="row row-underline">
				<div class="col-md-6"> <span class=" deal-text">Product</span> </div>
			</div>
            <div class="row">
                <div class="col-lg-2 order-lg-1 order-2">
                    <ul class="image_list">
						<%product.images.map((img)=>{%>
							<li data-image="/productImages/<%-img%>"><img src="/productImages/<%-img%>" onclick="changeImage(`/productImages/<%-img%>`)" alt=""></li>
							<%})%>
                       
                    </ul>
                </div>
                <div class="col-lg-4 order-lg-2 order-1">
                    <div class="image_selected"><img id="mainImg" src="/productImages/<%-product.images[0]%>" alt=""></div>
                </div>
                <div class="col-lg-6 order-3">
					
                    <div class="product_description">
                       
                        <div class="product_name"><%-product.sortDesc%></div>
                        <div class="product-rating"><span class="badge badge-success"><i class="fa fa-star"></i> 4.5 Star</span> <span class="rating-review">35 Ratings & 45 Reviews</span></div>
                        <div> <span class="product_price">â‚¹ <%-product.price%></span> </div>
                        <hr class="singleline">
                        <div>  <span class="product_info">7 Days easy return policy<span><br> <span class="product_info">In Stock: <%-product.quantity%> units sold this week<span> </div>
                        <div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="br-dashed">
                                        <div class="row">
                                            <div class="col-md-3 col-xs-3"> <img src="https://img.icons8.com/color/48/000000/price-tag.png"> </div>
                                            <div class="col-md-9 col-xs-9">
                                                <div class="pr-info"> <span class="break-all">Get 5% instant discount + 10X rewards @ RENTOPC</span> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7"> </div>
                            </div>
                        </div>
                        <hr class="singleline">
                        <div class="order_info d-flex flex-row">
                            <form action="#">
                        </div>
                        <div class="row">
                           
                            <div class="col-xs-6"> <button type="button" class="btn btn-primary shop-button">Add to Cart</button> <button type="button" class="btn btn-success shop-button">Go To Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-underline">
                <div class="col-md-6"> <span class=" deal-text">Specifications</span> </div>
            </div>
            <div class="row">
                <div class="col-md-12 product_name">
					<%-product.desc%>
                   
                </div>
            </div>
			<div class="row row-underline">
				<div class="col-md-6"> <span class=" deal-text">Reviews</span> </div>
			</div>
        </div>
    </div>
</div>


<script>
	function changeImage(e){
		let mainImg=document.querySelector("#mainImg")
		mainImg.src=e;
	}
</script>